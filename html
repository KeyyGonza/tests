    <script>
        function calculateCompatibility() {
            const DESIRED_RESPONSE = [5, 3, 2, 4, 5];
            const MAX_SCORE = 25;

            let responses = [
                Number(document.getElementById('q1').value),
                Number(document.getElementById('q2').value),
                Number(document.getElementById('q3').value),
                Number(document.getElementById('q4').value),
                Number(document.getElementById('q5').value)
            ];

            let totalCompatibility = responses.reduce((total, response, index) => {
                return total + (5 - Math.abs(response - DESIRED_RESPONSE[index]));
            }, 0);

            totalCompatibility = Math.round((totalCompatibility / MAX_SCORE) * 100); // Convert to percentage

            let message;
            if (totalCompatibility >= 80) {
                message = "Let's make our dreams come true together!";
            } else if (totalCompatibility >= 50) {
                message = "We could work out, but let's take it slow.";
            } else {
                message = "Let's...not.";
            }

            document.getElementById("compatibility").innerHTML = `Your compatibility is ${totalCompatibility}%. ${message}`;
        }
    </script>
